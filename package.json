{
	"name": "@gv/drawer",
	"version": "0.1.0",
	"description": "An unstyled draggable drawer component for React",
	"private": false,
	"main": "dist/index.js",
	"module": "dist/index.mjs",
	"types": "dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsup",
		"dev": "tsup --watch",
		"test": "turbo turbo:test",
		"lint": "biome check ./src",
		"lint:fix": "biome check --write ./src",
		"lint:unsafe": "biome check --write --unsafe ./src",
		"jest": "jest ./src",
		"playwright": "playwright test",
		"prepare": "husky install"
	},
	"lint-staged": {
		"src/**/!(*.css|*.svg)": [
			"biome check --write"
		]
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/logansparlin/react-drawer.git"
	},
	"author": "Vladislav Shalnev <vladislav.a.shalnevv@gmail.com>",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/logansparlin/react-drawer/issues"
	},
	"homepage": "https://github.com/logansparlin/react-drawer#readme",
	"keywords": [
		"react",
		"mobile",
		"drawer",
		"draggable",
		"sheet",
		"modal",
		"dialog",
		"unstyled",
		"headless"
	],
	"dependencies": {
		"@radix-ui/react-compose-refs": "^1.0.1",
		"@radix-ui/react-dialog": "^1.0.5",
		"@radix-ui/react-presence": "^1.0.1",
		"@radix-ui/react-primitive": "^1.0.3",
		"@radix-ui/react-slot": "^1.0.2",
		"react-remove-scroll": "^2.5.7"
	},
	"peerDependencies": {
		"react": "^19",
		"react-dom": "^19"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.5",
		"@playwright/test": "^1.41.1",
		"@swc/core": "^1.3.101",
		"@trivago/prettier-plugin-sort-imports": "^4.3.0",
		"@types/jest": "^29.5.11",
		"@types/node": "^20.11.6",
		"@types/react": "^19",
		"@types/react-dom": "^19",
		"husky": "^8.0.3",
		"jest": "^29.7.0",
		"jest-environment-jsdom": "^29.7.0",
		"lint-staged": "^15.2.0",
		"ts-jest": "^29.1.2",
		"ts-node": "^10.9.2",
		"tsup": "^8.0.1",
		"turbo": "^1.12.1",
		"typescript": "^5.3.3"
	}
}
